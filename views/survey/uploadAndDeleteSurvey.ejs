<div class="panel panel-default">
    <div class="panel-body">
        <div id="upload_survey_alert" class="alert alert-danger hidden" role="alert">
          <dl>
          </dl>
        </div>
        <form id="upload_survey_form" method="POST" role="form" enctype="multipart/form-data">
          <legend>Upload Survey</legend>

          <div class="form-group">
            <label for="surveyDesc">Survey Description</label>
            <input type="text" class="form-control" id="surveyDesc" name="surveydesc" placeholder="survey Description">
          </div>

          <div class="form-group">
            <label for="inputsurvey">File Input</label>
            <input id="inputsurvey" type="file" name="surveyfile">
            <p class="help-block">The file shall be in JSON format</p>
          </div>

          <button type="submit" class="btn btn-primary" id="upload_survey_btn">Submit</button>
        </form>

        <p>
        </br>
        <label class="pull-right">Existed survey</label>

        <table class='table' id='survey_table'>
            <thead>
                <tr>
                    <th>Desc</th>
                    <th>Template Name</th>
                    <th>Owner</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id='survey_list_body'>
                <% _.each(surveys, function(survey) { %>
                <tr data-id="<%= survey.id %>" data-model="survey">
                    <input type="hidden" value = <%= survey.id %>> 
                    <td><%= survey.desc %></td>
                    <td><%= survey.name %></td>
                    <td><%= survey.owner.fullname %></td>
                    <td><input type="button" class="btn btn-sm btn-default pull-right delete_survey_btn" value="Delete" /></td>
                    <td><input type="button" class="btn btn-sm btn-default pull-right get_survey_report_btn" value="Report" /></td>
                    
                </tr>
                <%})%>
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript" >

    require.undef('common/upload_and_delete_survey');
    require(['common/upload_and_delete_survey']);

</script>
