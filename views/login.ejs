<div class="container-fluid">
  <div class="row">
    <div class="col-md-12, col-xs-12">
        <div class="center-block login-panel">
          <% var errors = req.flash('error') %>
          <div id="alert_area" class="alert alert-danger <%= (!errors || errors.length === 0) ? 'hidden' : 'show' %>" role="alert">
            <dl>
              <% errors.forEach(function(error){ %>
                <dt><%= error %></dt>
              <% }) %>
            </dl>
          </div>
          <% include component/login_form %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
require(['jquery', 'bootstrap'], function($){
  $(document).ready(function () {
    $('#login_btn').click(function(){
      $(this).button('loading');
    });
  });
});
</script>
