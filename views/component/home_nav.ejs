                <li><a href="http://beehive.eecloud.dynamic.nsn-net.net:4567/">Discuss</a></li>

                <% if(!user) { %>
                <li><a href="#loginModal" data-toggle="modal" data-backdrop="static" id = "fixbar-login">Log in</a>
                </li>

                <script type="text/javascript">
                  require(['common/login_modal']);
                </script>
              <% } else { %>
                <li>
                  <a href="/auth/logout">Log out</a>
                </li>

                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                    <span id="username"><%= user.fullname %></span>
                    <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu" role="menu">
                    <li><a href="/user/myprofile">My Profile</a>
                    </li>
                    <li><a href="/user/mygroup">My Group</a>
                    </li>
                    <li><a href="/user/myevent">My Event</a>
                    </li>
                  </ul>
                </li>

                <li>

                    <% if (!user.userfd) { %>
                      <img src="/images/default_upp.jpg" alt="..." class="img-circle portrait" ,id ="nav_user_fd" , height = 30>
                    <% } else {%>
                      <img src="<%=user.userfd%>" alt="..." class="img-circle portrait" ,id ="nav_user_fd" , height = 30>
                    <% } %>

                </li>
              <% } %>
            </ul>
        </nav>
        <div class="col-sm-1">
          <a href="#top" id="back-to-top" title="Back To Top">Back To Top</a>
        </div>
    </div>
  </div>
