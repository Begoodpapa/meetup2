<% var user = req.session.user %>
    <!-- Fixed Bar -->
<div class="fixed-bar animated-quick">
  <div class="container">
    <div class="row">
      <div class="col-sm-2">
        <a href="/" class="logo" title="Go Home"><img src="/images/banner.png" alt="Beehive home"></a>
      </div>
      <nav class="col-sm-9">
           <ul id = "fixbar-nav">
               <li><a href="/newGroup" title = "New a group">New</a></li>
                <li><a href="#findModal" data-toggle="modal" data-backdrop="static">Find</a></li>
                <li><a href="http://beehive.eecloud.dynamic.nsn-net.net:1338/">Persona</a></li>
